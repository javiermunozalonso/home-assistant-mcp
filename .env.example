# Home Assistant Configuration
# Copy this file to .env and fill in your values

# Home Assistant URL (required)
# Example: http://192.168.1.100:8123 or https://your-ha-instance.duckdns.org
HA_URL=http://your-home-assistant-url:8123

# Long-lived access token (required)
# Generate in Home Assistant: Profile -> Long-Lived Access Tokens -> Create Token
HA_TOKEN=your_long_lived_access_token_here

# SSL verification (optional, default: true)
# Set to false if using self-signed certificates
HA_VERIFY_SSL=true

# Request timeout in seconds (optional, default: 30)
HA_TIMEOUT=30
